<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="root">

    <Preference
        android:id="@+id/pref_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fragment="com.example.settingsdemo.settings.DialogFragment"
        app:icon="@android:drawable/btn_plus"
        app:key="Dialog Prefs"
        app:summary="Dialog Prefs"
        app:title="DialogPrefs" />
    <Preference
        android:id="@+id/pref_widget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fragment="com.example.settingsdemo.settings.WidgetFragment"
        app:icon="@android:drawable/btn_minus"
        app:title="Widget Prefs" />
    <Preference
        android:id="@+id/prf_advanced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fragment="com.example.settingsdemo.settings.AdvancedFragment"
        app:icon="@android:drawable/btn_dropdown"
        app:summary="weitere Prefs"
        app:title="Advanced Prefs" />
    <EditTextPreference
        android:defaultValue="empty"
        android:key="username"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Username"
        app:summary="zum Registrieren" />


</PreferenceScreen>